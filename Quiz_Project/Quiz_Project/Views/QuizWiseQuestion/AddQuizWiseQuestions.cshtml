<section class="section">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Add Quiz Wise Question</h2>
                <table class="table">
                    <hr/>
                    <!-- No Labels Form -->
                    <form class="row g-3">
                    <thead>
                        <tr>
