@model NicePageAdminTheme.Models.MST_Quiz_Model

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Quiz</h5>

            <!-- Add Quiz Form -->
            <form id="addQuizForm" method="post" asp-controller="Quiz" asp-action="QuizAdd">

                @* <!-- Validation Summary --> *@
                @* <div asp-validation-summary="All" class="text-danger"></div> *@

                <div class="row mb-3">
                    <label for="QuizName" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Quiz Name
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="QuizName" type="text" class="form-control" id="QuizName" placeholder="Enter Quiz Name">
                        <span asp-validation-for="QuizName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuizDate" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Quiz Date
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="QuizDate" type="date" class="form-control" id="QuizDate">
                        <span asp-validation-for="QuizDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="TotalQuestions" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Total Questions
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="TotalQuestions" type="number" class="form-control" id="TotalQuestions" placeholder="Enter Total Questions">
                        <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                    </div>
                </div>

                @* <div class="row mb-3"> *@
                @*     <label for="UserID" class="col-sm-2 col-form-label"> *@
                @*         <span class="required bold text-danger">*</span> User ID *@
                @*     </label> *@
                @*     <div class="col-sm-10"> *@
                @*         <input asp-for="UserID" type="number" class="form-control" id="UserID" placeholder="Enter User ID"> *@
                @*         <span asp-validation-for="UserID" class="text-danger"></span> *@
                @*     </div> *@
                @* </div> *@

                <div class="text-center">
                    <button type="submit" class="btn btn-success mt-3">Save</button>
                    <button type="button" class="btn btn-danger mt-3" onclick="resetForm()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
            <!-- End Add Quiz Form -->

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function resetForm() {
            document.getElementById("addQuizForm").reset();
        }
    </script>
}
