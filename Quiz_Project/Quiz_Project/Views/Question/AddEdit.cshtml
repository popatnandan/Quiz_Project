@model NicePageAdminTheme.Models.MST_Question_Model

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Question</h5>

            <!-- Add Question Form -->
            <form id="addQuestionForm" method="post" asp-controller="Question" asp-action="QuestionAdd">
                @* <!-- Validation Summary --> *@
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="row mb-3">
                    <label for="QuestionText" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Question
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="QuestionText" placeholder="Enter Question" asp-for="QuestionText">
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionLevelID" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Question Level
                    </label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="QuestionLevelID">
                            <option value="">Select QuestionLevel</option>
                            @foreach (var QuestionLevel in ViewBag.Question_Level)
                            {
                                <option value="@QuestionLevel.QuestionLevelID">@QuestionLevel.QuestionLevelName</option>
                            }
                        </select>
                        <span asp-validation-for="QuestionLevelID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionA" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Option A
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="OptionA" placeholder="Enter Option A" asp-for="OptionA">
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionB" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Option B
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="OptionB" placeholder="Enter Option B" asp-for="OptionB">
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionC" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Option C
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="OptionC" placeholder="Enter Option C" asp-for="OptionC">
                        <span asp-validation-for="OptionC" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionD" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Option D
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="OptionD" placeholder="Enter Option D" asp-for="OptionD">
                        <span asp-validation-for="OptionD" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label for="CorrectOption" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Correct Option
                    </label>
                    <div class="col-sm-10">
                        <select class="form-select" id="CorrectOption" asp-for="CorrectOption">
                            <option value="">Select Correct Option</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
                        <span asp-validation-for="CorrectOption" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionMarks" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Marks
                    </label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="QuestionMarks" placeholder="0" asp-for="QuestionMarks">
                        <span asp-validation-for="QuestionMarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success mt-3">Save</button>    
                    <button type="button" class="btn btn-danger mt-3" onclick="resetForm()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
            <!-- End Add Question Form -->

        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}