<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Question Level</h5>

            <!-- Add Question Level Form -->
            <form id="addQuestionLevel" method="post" asp-controller="QuestionLevel" asp-action="AddQuestionLevel">
                <div class="row mb-3">
                    <label for="AddQuestionLevel" class="col-sm-2 col-form-label">
                        <span class="required bold text-danger">*</span> Question Level
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputText" name="QuestionLevelName" placeholder="Enter a question level (e.g., Easy, Medium, Hard)">
                        <button type="submit" class="btn btn-success mt-3">Save</button>
                        <button type="reset" class="btn btn-danger mt-3" onclick="resetForm()">Cancel</button>
                    </div>
                </div>
            </form>
            <!-- End Add Question Level Form-->
        </div>
    </div>
</div>
<script>
    function resetForm() {
                document.getElementById("addQuestionLevel").reset();
        }
</script>